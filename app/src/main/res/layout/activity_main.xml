<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splashScreenView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/backgr"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.AppCompatImageView>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_group"
        app:layout_constraintBottom_toBottomOf="@+id/splashScreenView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splashScreenView">

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_rectangle_butt1blck"
        android:text="sign up"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashScreenView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_rectangle_butt2wh"
        android:text="log in"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashScreenView" />

</androidx.constraintlayout.widget.ConstraintLayout>